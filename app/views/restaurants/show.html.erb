<hr>
  <div class="container">
    <div class="row justify-content-center">
      <img src="https://source.unsplash.com/user/edgarraw/800x400" style="border-radius:5px" style="box-shadow: 10px">
    </div>
    <br>
    <div class="row justify-content-center" >
      <h1><strong><%= @restaurant.name %></strong> </h1>
    </div>
    <div class="d-flex" style="padding-left:150px" >
      <h5> 🍴<%= @restaurant.category.capitalize %></h5>
    </div>
    <div class="d-flex" style="padding-left:150px" >
      <h5> 📍<%= @restaurant.address %></h5>
    </div>
    <div class="d-flex" style="padding-left:150px" >
      <h5> 📞 <%= @restaurant.phone_number %> </h5>
    </div>
    <div class="row justify-content-center">
      <button class="btn btn-info" style="margin:10px"> <%=link_to 'Show reviews', restaurant_reviews_path(@restaurant)%> </button>
      <button class="btn btn-warning" style="margin:10px"> <%=link_to 'Add review', new_restaurant_review_path(@restaurant)%> </button>
      <button class="btn btn-dark" style="margin:10px"> <%=link_to 'Back to list', restaurants_path%> </button>
      </div>
    </div>
  </div>
</hr>
